<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config /><!-- //aktifkan autowired -->
    
    <bean id="p" class="com.github.topekox.belajar.entity.Produk">
        <property name="kode" value="P-002"/>
        <property name="nama" value="Produk 001"/>
        <property name="harga" value="162000.50"/>
    </bean>
    
    <bean id="ds" class="com.mysql.cj.jdbc.MysqlDataSource">
        <property name="url" value="jdbc:mysql://localhost/belajar_spring"/>
        <property name="user" value="ucup"/>
        <property name="password" value="123456"/>        
    </bean>
    
    <bean id="pd" class="com.github.topekox.belajar.dao.ProdukDao">
        <!--<constructor-arg ref="ds"/> via constructor-->
        <!--<property name="dataSourceKeDatabase" ref="ds"/>name harus sama dengan nama method setter di class ProdukDao-->
    </bean>
</beans>